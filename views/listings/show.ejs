<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="show-header"><%= list.title %></h3>

    <div class="card show-card">
      <img
        src="<%= list.image.url %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p><i>Owned by: <%=list.owner.username%></i></p>
        <p class="card-text"><%= list.description %></p>
        <p>&#8377; <%= list.price.toLocaleString("en-IN") %></p>
        <p><%= list.location %></p>
        <p><%= list.country %></p>
      </div>
    </div>
    <% if(currUser && currUser._id.equals(list.owner._id)){%>
    <div class="show-btns mb-5">
      <a href="/listings/<%= list._id %>/edit" class="btn btn-dark edit-btn"
        >Edit</a
      >

      <form method="POST" action="/listings/<%=list._id%>?_method=DELETE">
        <button class="btn btn-dark delete-btn">Delete</button>
      </form>
    </div>
    <%}%>
  </div>
  <hr />
  <div class="col-6 offset-2">
    <% if(currUser){%>
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%=list.id%>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <!-- <div class="mb-3 mt-3">
        <label for="range2" class="form-label">Rating</label>
        <input
          type="range"
          class="form-range"
          min="0"
          max="5"
          id="range2"
          name="review[rating]"
        />
      </div> -->
      <div class="mb-3 mt-3">
        <label for="range2" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment class=form-label">Comment</label>
        <textarea
          cols="30"
          rows="5"
          name="review[comment]"
          id="comment"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a valid comment</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <%}%>
    <hr />
    <h3>Reviews</h3>
    <div class="row">
      <h4>All Reviews</h4>
      <% if(list.review.length > 0) { %> <% for(let r of list.review) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title"><%=r.author.username%></h5>
          <p class="card-text"><%= r.comment %></p>
          <p class="card-text"><%= r.rating %> stars</p>
          <p
            class="starability-result card-text"
            data-rating="<%= r.rating %>"
          ></p>
        </div>
        <form
          mb-3
          method="POST"
          action="/listings/<%= list._id %>/reviews/<%= r._id %>?_method=DELETE"
        >
          <button class="btn btn-dark btn-sm mb-3">Delete</button>
        </form>
      </div>
      <% } %> <% } else { %>
      <p>No reviews yet.</p>
      <% } %>
    </div>
  </div>
</div>
