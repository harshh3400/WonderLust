<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="show-header">Listing Details</h3>

    <div class="card show-card listing-card">
      <img
        src="<%= list.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= list.title %></b> <br />
          <%= list.description %> <br />
          &#8377; <%= list.price.toLocaleString("en-IN") %> <br />
          <%= list.location %> <br />
          <%= list.country %>
        </p>
      </div>
    </div>

    <div class="show-btns mb-5">
      <a href="/listings/<%= list._id %>/edit" class="btn btn-dark edit-btn"
        >Edit</a
      >

      <form method="POST" action="/listings/<%=list._id%>?_method=DELETE">
        <button class="btn btn-dark delete-btn">Delete</button>
      </form>
    </div>
  </div>
</div>
