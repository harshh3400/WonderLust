<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <h3 style="text-align: center">Signup for WonderLust</h3>
  <div class="cols-8 offset-3" style="width: 400px">
    <form action="/signup" method="POST" class="needs-validation novalidate">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="text"
          name="email"
          id="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
